{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "build",
    "experimentalDecorators": true,
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@api": ["api/index.ts"],
      "@config": ["config/index.ts"]
    }
  },
  "exclude": ["node_modules", "build"],
}