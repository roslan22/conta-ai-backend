{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api/index.ts"],
      "@config": ["src/config/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"],
}